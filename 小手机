    <script>
        // 获取DOM元素
        const lockscreen = document.getElementById('lockscreen');
        const homescreen = document.getElementById('homescreen');
        const passwordInput = document.getElementById('password-input');
        const unlockBtn = document.getElementById('unlock-btn');
        const errorMsg = document.getElementById('error-msg');
        const currentTime = document.getElementById('current-time');
        const lockTime = document.getElementById('lock-time');
        const currentDate = document.getElementById('current-date');
        
        // 应用相关元素
        const appIcons = document.querySelectorAll('.app-icon');
        const messagesApp = document.getElementById('messages-app');
        const notesApp = document.getElementById('notes-app');
        const messagesContainer = document.getElementById('messages-container');
        const backFromMessages = document.getElementById('back-from-messages');
        const backFromNotes = document.getElementById('back-from-notes');
        const messageInput = document.getElementById('message-input');
        const sendBtn = document.getElementById('send-btn');
        
        // 备忘录相关元素
        const notePlaceholder = document.getElementById('note-placeholder');
        const noteList = document.getElementById('note-list');
        const newNoteBtn = document.getElementById('new-note-btn');
        const saveNoteBtn = document.getElementById('save-note-btn');
        const noteEditor = document.getElementById('note-editor');
        
        // 定义消息内容
        const predefinedMessages = [
            "哦~",
            "他好我坏",
            "哼......走开啊",
            "你和他好去吧",
            "真走啊",
            "好了好了，师傅跟你开玩笑的",
            "真生师傅气了？",
            "好，是师傅坏",
            "那坏师傅哄哄你好不好"
        ];
        
        // 正确密码
        const correctPassword = "0826";
        
        // 备忘录数据
        let notes = [];
        let currentNoteId = null;
        
        // 更新时间和日期
        function updateDateTime() {
            const now = new Date();
            
            // 格式化时间
            const hours = now.getHours().toString().padStart(2, '0');
            const minutes = now.getMinutes().toString().padStart(2, '0');
            const timeString = `${hours}:${minutes}`;
            
            // 更新锁屏和状态栏时间
            currentTime.textContent = timeString;
            lockTime.textContent = timeString;
            
            // 格式化日期
            const year = now.getFullYear();
            const month = now.getMonth() + 1;
            const day = now.getDate();
            const weekdays = ["星期日", "星期一", "星期二", "星期三", "星期四", "星期五", "星期六"];
            const weekday = weekdays[now.getDay()];
            const dateString = `${year}年${month}月${day}日 ${weekday}`;
            
            currentDate.textContent = dateString;
        }
        
        // 初始化时间
        updateDateTime();
        setInterval(updateDateTime, 1000);
        
        // 解锁功能
        unlockBtn.addEventListener('click', unlockPhone);
        passwordInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                unlockPhone();
            }
        });
        
        function unlockPhone() {
            const inputPassword = passwordInput.value;
            
            if (inputPassword === correctPassword) {
                // 解锁成功
                lockscreen.classList.add('hidden');
                homescreen.classList.add('active');
                passwordInput.value = '';
                errorMsg.style.visibility = 'hidden';
            } else {
                // 密码错误
                errorMsg.style.visibility = 'visible';
                passwordInput.value = '';
                passwordInput.focus();
                
                // 添加震动效果
                lockscreen.style.animation = 'shake 0.5s';
                setTimeout(() => {
                    lockscreen.style.animation = '';
                }, 500);
            }
        }
        
        // 为应用图标添加点击事件
        appIcons.forEach(icon => {
            icon.addEventListener('click', function() {
                const app = this.getAttribute('data-app');
                
                if (app === 'messages') {
                    // 打开消息应用
                    homescreen.classList.remove('active');
                    messagesApp.classList.add('active');
                    
                    // 显示消息
                    displayMessages();
                } else if (app === 'notes') {
                    // 打开备忘录应用
                    homescreen.classList.remove('active');
                    notesApp.classList.add('active');
                    
                    // 显示备忘录
                    displayNotes();
                } else {
                    // 其他应用暂时没有功能
                    alert('该应用正在开发中...');
                }
            });
        });
        
        // 显示消息 - 逐条显示
        function displayMessages() {
            messagesContainer.innerHTML = '';
            
            // 禁用发送按钮，直到所有消息显示完毕
            sendBtn.disabled = true;
            
            // 逐条显示预定义消息
            predefinedMessages.forEach((message, index) => {
                setTimeout(() => {
                    addMessageToChat(message);
                    
                    // 如果是最后一条消息，启用发送按钮
                    if (index === predefinedMessages.length - 1) {
                        sendBtn.disabled = false;
                    }
                }, index * 800); // 每条消息间隔800毫秒
            });
            
            // 滚动到底部
            setTimeout(() => {
                messagesContainer.scrollTop = messagesContainer.scrollHeight;
            }, predefinedMessages.length * 800);
        }
        
        // 添加消息到聊天界面
        function addMessageToChat(message) {
            const messageElement = document.createElement('div');
            messageElement.classList.add('message');
            
            // 获取当前时间
            const now = new Date();
            const hours = now.getHours().toString().padStart(2, '0');
            const minutes = now.getMinutes().toString().padStart(2, '0');
            const timeString = `${hours}:${minutes}`;
            
            // 设置消息内容
            messageElement.innerHTML = `
                <div>${message}</div>
                <div class="message-time">${timeString}</div>
            `;
            
            messagesContainer.appendChild(messageElement);
            
            // 滚动到底部
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }
        
        // 发送新消息
        sendBtn.addEventListener('click', sendMessage);
        messageInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });
        
        function sendMessage() {
            const message = messageInput.value.trim();
            if (message) {
                addMessageToChat(message);
                messageInput.value = '';
                messageInput.focus();
            }
        }
        
        // 备忘录功能
        function displayNotes() {
            if (notes.length === 0) {
                notePlaceholder.style.display = 'flex';
                noteList.style.display = 'none';
                saveNoteBtn.style.display = 'none';
            } else {
                notePlaceholder.style.display = 'none';
                noteList.style.display = 'block';
                saveNoteBtn.style.display = 'none';
                
                noteList.innerHTML = '';
                notes.forEach((note, index) => {
                    const noteItem = document.createElement('div');
                    noteItem.classList.add('note-item');
                    noteItem.setAttribute('data-id', index);
                    
                    noteItem.innerHTML = `
                        <div class="note-item-title">${note.title || '无标题'}</div>
                        <div class="note-item-content">${note.content || ''}</div>
                    `;
                    
                    noteItem.addEventListener('click', function() {
                        editNote(index);
                    });
                    
                    noteList.appendChild(noteItem);
                });
            }
        }
        
        function createNewNote() {
            notePlaceholder.style.display = 'none';
            noteList.style.display = 'none';
            saveNoteBtn.style.display = 'block';
            
            // 创建编辑区域
            const editorArea = document.createElement('div');
            editorArea.id = 'editor-area';
            editorArea.innerHTML = `
                <input type="text" id="note-title-input" class="note-textarea" placeholder="标题" style="height: 50px; margin-bottom: 10px;">
                <textarea id="note-content-input" class="note-textarea" placeholder="输入备忘录内容..."></textarea>
            `;
            
            // 清除之前的编辑区域
            const existingEditor = document.getElementById('editor-area');
            if (existingEditor) {
                existingEditor.remove();
            }
            
            // 插入到操作按钮之前
            noteEditor.insertBefore(editorArea, noteEditor.querySelector('.note-actions'));
            
            // 聚焦到标题输入框
            document.getElementById('note-title-input').focus();
            
            currentNoteId = null;
        }
        
        function editNote(id) {
            notePlaceholder.style.display = 'none';
            noteList.style.display = 'none';
            saveNoteBtn.style.display = 'block';
            
            // 创建编辑区域
            const editorArea = document.createElement('div');
            editorArea.id = 'editor-area';
            editorArea.innerHTML = `
                <input type="text" id="note-title-input" class="note-textarea" placeholder="标题" style="height: 50px; margin-bottom: 10px;" value="${notes[id].title || ''}">
                <textarea id="note-content-input" class="note-textarea" placeholder="输入备忘录内容...">${notes[id].content || ''}</textarea>
            `;
            
            // 清除之前的编辑区域
            const existingEditor = document.getElementById('editor-area');
            if (existingEditor) {
                existingEditor.remove();
            }
            
            // 插入到操作按钮之前
            noteEditor.insertBefore(editorArea, noteEditor.querySelector('.note-actions'));
            
            currentNoteId = id;
        }
        
        function saveNote() {
            const titleInput = document.getElementById('note-title-input');
            const contentInput = document.getElementById('note-content-input');
            
            const title = titleInput.value.trim();
            const content = contentInput.value.trim();
            
            if (currentNoteId === null) {
                // 新建备忘录
                notes.push({
                    title: title || '无标题',
                    content: content,
                    date: new Date().toLocaleString()
                });
            } else {
                // 更新现有备忘录
                notes[currentNoteId] = {
                    title: title || '无标题',
                    content: content,
                    date: new Date().toLocaleString()
                };
            }
            
            // 显示备忘录列表
            displayNotes();
            
            // 清除编辑区域
            const editorArea = document.getElementById('editor-area');
            if (editorArea) {
                editorArea.remove();
            }
        }
        
        // 备忘录按钮事件
        newNoteBtn.addEventListener('click', createNewNote);
        saveNoteBtn.addEventListener('click', saveNote);
        
        // 返回按钮功能
        backFromMessages.addEventListener('click', function() {
            messagesApp.classList.remove('active');
            homescreen.classList.add('active');
        });
        
        backFromNotes.addEventListener('click', function() {
            notesApp.classList.remove('active');
            homescreen.classList.add('active');
        });
        
        // 添加震动动画
        const style = document.createElement('style');
        style.textContent = `
            @keyframes shake {
                0%, 100% { transform: translateY(0); }
                10%, 30%, 50%, 70%, 90% { transform: translateY(-5px); }
                20%, 40%, 60%, 80% { transform: translateY(5px); }
            }
        `;
        document.head.appendChild(style);
        
        // 初始显示一条提示
        setTimeout(() => {
            alert("提示：密码是 0826 (你爱人的生日)");
        }, 1000);
    </script>
</body>
</html>
